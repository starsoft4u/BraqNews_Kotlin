<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.ProgressBar.Inverse">
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/border_round</item>
        <item name="android:height">@dimen/edit_text_height</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/barq</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyle.Group">
        <item name="android:background">@drawable/section_bg</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">#736059</item>
    </style>

    <style name="ButtonStyle.Small">
        <item name="android:textSize">17sp</item>
        <item name="android:height">@dimen/button_small_height</item>
    </style>

    <style name="ButtonStyle.Small.Secondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">#736059</item>
    </style>

</resources>
